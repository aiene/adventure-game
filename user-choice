def start_game():
    print("Welcome to the adventure game!")
    print("You find yourself in a dark room with two doors. Which door do you choose? (1 or 2)")
    user_choice = input()
    
    if user_choice == "1":
        print("You enter a treasure room and find a chest full of gold. You win!")
    elif user_choice == "2":
        print("You enter a room full of monsters. You lose!")
    else:
        print("Invalid choice. The game is over.")

# Call the function to start the game
start_game()
